// need to reverse my string at the very end bef printing
// the results
void	reverse(char *res, int len)
{
	int	j;
	int	c;

	j = 0;
	len--;
	while (j < len)
	{
		c = res[j];
		res[j++] = res[len];
		res[len--] = c;
	}
}




// printf("checking nbr %d, &overfl_remainder %c, base %s,
// &len %d\n", nbr, overfl_remainder, base, len);
void	ft_putnbr_base(int nbr, char *base)
{
	int		i;
	int		sign;
	int		len;
	char	overfl_remainder;
	char	res[33];

	i = 0;
	sign = nbr;
	overfl_remainder = '\0';
	
    // check base len and validity
    int		i;
	int		j;

	i = 0;
	while (base[i])
	{
		j = 0;
		if (base[i] == '+' || base[i] == '-')
			return (0);
		while (j < i)
			if (base[j++] == base[i])
				return (0);
		i++;
	}
	if (i == 1 || i <= 0)
		return (0);
    *len = i;
	if (!(*len))
		return ;
	if (*nbr < 0 && *nbr != -2147483647 - 1)
		*nbr = -(*nbr);
	if (*nbr == -2147483647 - 1)
	{
		*overfl_remainder = base[-(*nbr % *len)];
		*nbr /= *len;
		*nbr = -(*nbr);
	}
	if (nbr == 0)
		res[i++] = '0';
	while (nbr > 0)
	{
		res[i++] = base[nbr % len];
		nbr /= len;
	}
	if (sign < 0)
		res[i++] = '-';
	reverse(res, i);
	write(1, res, i);
	if (overfl_remainder)
		write(1, &overfl_remainder, 1);
	return ;
}

